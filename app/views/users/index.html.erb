<h1 class = "Welcome"><img src="https://www.designfreelogoonline.com/wp-content/uploads/2015/04/00420-cart-02.png" width=80 height=80>RubiServes</h1>
<hr>
<div class = "aparna">
    <h2 class="inform">Register @RubiServes</h2>
    <div class="card">
        <form action="/users", method="POST">
            <div class="errors" style = "color:red"} >
                <% if flash[:register_errors] %>
                    <% flash[:register_errors].each do |error| %>
                        <p> <%= error %>
                    <%end%>
                <% end %>
            </div>
            <section>
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                <label for="fname">Name:</label><br>
                <input type="text" id="firstname" name="user[name]" placeholder="John Doe" size = 38><br><br>
                <label for="fname">Email ID:</label><br>
                <input type="email" id="email" name="user[email]" placeholder="johndoe@gmail.com" size = 38><br><br>
                <label for="fname">Password:</label><br>
                <input type="password" id="password" name="user[password]" placeholder="Enter your password" size = 38><br><br>
                <label for="fname">Confirm Password:</label><br>
                <input type="password" id="password" name="user[password_confirmation]" placeholder="Re-enter your password" size = 38><br><br>
                <label for="roles">Your role:</label><br>
                <select id="roles" name="roles" placeholder="Select one" size = 1>
                    <option value="Customer">Customer</option>
                    <option value="Owner">Owner</option>
                    <option value="Clerk">Clerk</option>
                </select><br><br>
                <input class= "button" type="submit" value="Register">
            </section>
        </form>
    </div>
    <hr>

    <h2 class= "inform">Login @RubiServes</h2>
    <div class ="card">
        <form action="/sessions", method="POST">
                <div class="errors" style = "color:red" >
                    <% if flash[:login_errors] %>
                        <% flash[:login_errors].each do |error| %>
                            <p> <%= error %>
                        <%end%>
                    <% end %>
                </div>
            <section>
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                <label for="fname">Email ID:</label><br>
                <input type="email" id="email" name="login[email]" placeholder="johndoe@gmail.com" size = 38><br><br>
                <label for="fname">Password:</label><br>
                <input type="password" id="password" name="login[password]" placeholder="Enter your password" size = 38><br><br>
                <label for="roles">Your role:</label><br>
                <select id="roles" name="roles" placeholder="Select one">
                    <option value="Customer">Customer</option>
                    <option value="Owner">Owner</option>
                    <option value="Clerk">Clerk</option>
                </select><br><br>
                <input class= "button" type="submit" value="Login" style = "background_color:green">
            </section>
        </form>
    </div>
</div>
